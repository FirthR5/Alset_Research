@model Alset_Research.DTO.LoginDTO;
@{
    ViewData["Title"] = "Login";
}
<form asp-action="Login" class="login-style">
  <div class=" py-5 h-100">
    <div class="row d-flex pb-5 justify-content-center align-items-center h-100">
      <div class="col-12 pt-5 pb-5 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center"> 
            <hr class="my-4">
            <h3 class="mb-5">Login</h3>
            <hr class="my-4">
            <div data-mdb-input-init class="form-outline mb-4">
              <label class="form-label" asp-for="email">email</label>
              <input type="text"  asp-for="email" class="form-control form-control-lg" />
                <span asp-validation-for="email" class="text-danger"/>
            </div>

			<button class="btn btn-success btn-lg btn-block" type="submit">
				 Login <i class="bi bi-box-arrow-right"></i>
			</button>

            @if (ViewBag.ErrorMessage != null)
			{
				<div class="alert alert-danger mt-4">
					@ViewBag.ErrorMessage
				</div>
			}
          </div>
        </div>
      </div>
    </div>
  </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

